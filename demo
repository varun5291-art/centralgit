 MainActivity.kt
  
package com.example.proo13


import android.Manifest
import android.content.pm.PackageManager
import android.os.Build
import android.os.Bundle
import android.os.Environment
import android.widget.Button
import android.widget.TextView
import android.widget.Toast
import androidx.appcompat.app.AppCompatActivity
import java.io.BufferedReader
import java.io.File
import java.io.FileReader

class MainActivity : AppCompatActivity() {

    private lateinit var tvContent: TextView
    private val fileName = "myfile.txt"

    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)

        tvContent = findViewById(R.id.tvContent)
        val btnRead = findViewById<Button>(R.id.btnReadFile)

        btnRead.setOnClickListener {
            if (checkPermission()) {
                readFile()
            }
        }
    }

    private fun checkPermission(): Boolean {
        return if (Build.VERSION.SDK_INT >= Build.VERSION_CODES.M) {
            if (checkSelfPermission(Manifest.permission.READ_EXTERNAL_STORAGE)
                != PackageManager.PERMISSION_GRANTED) {

                requestPermissions(
                    arrayOf(Manifest.permission.READ_EXTERNAL_STORAGE),
                    100
                )
                false
            } else true
        } else true
    }

    private fun readFile() {
        try {
            val path = Environment.getExternalStorageDirectory().absolutePath
            val file = File(path + "/" + fileName)

            if (!file.exists()) {
                tvContent.text = "File not found: $fileName"
                return
            }

            val reader = BufferedReader(FileReader(file))
            val stringBuilder = StringBuilder()
            var line: String?

            do {
                line = reader.readLine()
                if (line != null) {
                    stringBuilder.append(line).append("\n")
                }
            } while (line != null)

            reader.close()
            tvContent.text = stringBuilder.toString()

        } catch (e: Exception) {
            tvContent.text = "Error: ${e.message}"
        }
    }
}


activity_main.xml

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnReadFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read File from SD Card"/>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"/>
</LinearLayout>
